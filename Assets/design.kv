<MainHome>:
    todo_views: todo_views
    layout_main: layout_main
    header_id: header_id
    todo_tabbed1: todo_tabbed1
    todo_tabbed2: todo_tabbed2
    add_btn_id: add_btn_id
    FloatLayout:
        id: layout_main
        Button:
            id: add_btn_id
            text: 'Add a task'
            size_hint: 0.3, 0.07
            pos_hint: {'x': 0.67, 'y': 0.92}
            on_press:
                root.open_task_add()


        TabbedPanel:
            do_default_tab: False
            tab_width: root.width * 0.3
            tab_height: root.height * 0.07
            size_hint: 0.9, 0.98
            pos_hint: {'x': 0.05, 'y': 0.01}
            TabbedPanelItem:
                text: 'ToDo'
                id: todo_tabbed1
                GridLayout:
                    cols: 1
                    GridLayout:
                        cols: 2
                        id: header_id
                        size_hint_y: 0.1
                        canvas:
                            Color:
                                group: 'a'
                                rgba: 100/255, 100/255, 0/155, 1
                            Rectangle:
                                pos: self.pos
                                size: root.width * 0.9, root.height *0.08

                        Label:
                            size_hint_x: 0.8
                            text: 'Tasks'
                        Label:
                            size_hint_x: 0.2
                            text: 'Status'



                    ScrollView:
                        id: todo_views
                        do_scroll_x: False
                        do_scroll_y: True

            TabbedPanelItem:
                text: 'Options'
                id: todo_tabbed2
                GridLayout:
                    cols: 1
                    Label:
                        text: 'Change theme'
                    Button:
                        text: 'Efficascent'
                        on_press:
                            root.efficascent()
                    Button:
                        text: 'Lavie en Rose'
                        on_press:
                            root.lavie()
                    Button:
                        text: 'Blue Academy'
                        on_press:
                            root.blue_acad()